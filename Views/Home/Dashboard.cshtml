


<div class="main-section ">
    <div class="row " style="margin-top:70px;">
        <div class="col-lg-12">
            <div class="w3-panel w3-card-4 p-10 shaddo">
                <table>
                    <tr>
                        <td style="border-right:2px solid grey; margin:10px;">&nbsp;&nbsp; <img src="https://icon-library.com/images/attendance-icon/attendance-icon-7.jpg" style="height:50px;margin:15px;" /> </td>
                        <td>

                            <table>
                                <tr>
                                    <td colspan="6" class="text-left"><p style="margin-left:10px;">Admin &nbsp;&nbsp;|&nbsp;&nbsp;@ViewBag.name</p></td>
                                </tr>
                                <tr>

                                    <td> <form asp-action="create" asp-controller="Course_reg"><button class="btn btn-light btn-sm" action><i class="fa fa-plus-circle"></i>&nbsp;Add new course</button></form></td>
                                    <td> <form asp-action="create"><button class="btn btn-light btn-sm"><i class="fa fa-plus-circle"></i>&nbsp;Add staff</button></form></td>
                                    <td>
                                        <form asp-action="log_out">
                                            <button class="btn btn-light btn-sm">
                                                <i class="fa fa-power-off"></i>&nbsp;Log Out
                                            </button>
                                        </form>
                                    </td>


                                </tr>

                            </table>

                        </td>

                    </tr>

                </table>



            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-lg-4">


            <div class="dashbord">
                <div class="icon-section">
                    <i class="fa fa-th-list" aria-hidden="true"></i><br>
                    <small class="card_label">1 Litre carton</small>
                    <p>@ViewBag.Courses</p>
                    <h5 class="font-weight-bold text_color_cards">Ksh. 6/=</h5>

                </div>
                <div class="detail-section">

                    <a class="btn btn-light round_b" asp-action="create" asp-controller="Course_reg">Go to courses &nbsp;<i class="fa fa-angle-double-right"></i></a>

                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="dashbord ">
                <div class="icon-section">
                    <i class="fa fa-user" aria-hidden="true"></i><br>
                    <small>Registered students</small>
                    <p>@ViewBag.Students</p>
                </div>
                <div class="detail-section">
                    <a class="btn btn-light round_b" asp-action="create" asp-controller="Students_reg">Manage students&nbsp;<i class="fa fa-angle-double-right"></i></a>
                </div>
            </div>
        </div> <div class="col-lg-4">
            <div class="dashbord ">
                <div class="icon-section">
                    <i class="fa fa-user" aria-hidden="true"></i><br>
                    <small>Registered staff</small>
                    <p>@ViewBag.Staff</p>
                </div>
                <div class="detail-section">
                    <a class="btn btn-light round_b" asp-action="index" asp-controller="staff_log_in">Manage staff&nbsp;<i class="fa fa-angle-double-right"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="dashbord dashbord-green">
                <div class="icon-section">

                    <i class="fa fa-file-text"></i><br>
                    <small>Take Attendance</small>
                    <p>@ViewBag.Staff</p>
                </div>
                <div class="detail-section">
                    <a class="btn btn-light round_b text-dark" data-target="#receipt_mod" data-toggle="modal">Manage attendance&nbsp;<i class="fa fa-angle-double-right"></i></a>

                </div>
            </div>
        </div>  <div class="col-lg-6">
            <div class="dashbord dashbord-green">
                <div class="icon-section">

                    <i class="fa fa-file-text"></i><br>
                    <small>Attendance report</small>

                    <p>.</p>
                </div>
                <div class="detail-section">
                    <a class="btn btn-light round_b text-dark" data-toggle="modal" data-target="#att_r">Go to report&nbsp;<i class="fa fa-angle-double-right"></i></a>

                </div>
            </div>
        </div>

    </div>

</div>

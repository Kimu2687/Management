@model IEnumerable<Attendant_check.Models.Cartons>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Carton_category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buying_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selling_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.No_of_bottle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bottle_per_carton)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Carton_category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Buying_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Selling_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.No_of_bottle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bottle_per_carton)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<Attendant_check.Models.System_Users>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text_color p-2">
    <i class="fa fa-users"></i>&nbsp;System users
</h2>

<p>
    <a asp-action="Create" class="btn btn-sm button_custome">Create New</a>
</p>
<table class="table text_color">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Full_names)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff_no)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Full_names)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff_no)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Roles)
            </td>
            <td>
                <a asp-action="Edit" class="btn-sm button_custome " asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" class="btn-sm button_custome "  asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" class="btn-sm button_custome "  asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
